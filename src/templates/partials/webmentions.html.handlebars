{{#if webmentions}}
<section>
  <h3>Mentions</h3>
  {{#webmentions}}
  <p>
    {{initialUpper kind}} from <a href="{{author.url}}">{{author.name}}</a> on <a class="webmention" href="{{source}}"><time datetime="{{published}}" class="dt-published">{{humanDate published}}</time></a>{{#if content}}: <em>{{content}}</em>{{/if}}
  </p>
  {{/webmentions}}
</section>
{{/if}}
