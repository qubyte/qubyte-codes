<article class={{hType}} light-emoji="{{lightEmoji}}" dark-emoji="{{darkEmoji}}">
  <a class="u-author" href="/" hidden></a>
  <header>
    <a class="u-url" href="/notes/{{timestamp}}"><time datetime="{{datetime}}" class="dt-published">{{humanDateTime datetime timezone}}</time></a>
  </header>
  <div class="e-content">
    {{{content}}}
    {{#if syndications.twitter}}<a class="mention-of" href="https://brid.gy/publish/twitter"></a>{{/if}}
    {{#if syndications.mastodon}}<a class="mention-of" href="https://brid.gy/publish/mastodon"></a>{{/if}}
  </div>
  {{#photos}}
    <picture>
      {{#avif}}<source type="image/avif" srcset="{{@this}}">{{/avif}}
      {{#avif2x}}<source type="image/avif" srcset="{{@this}}" 2x>{{/avif2x}}
      {{#webp}}<source type="image/webp" srcset="{{@this}}">{{/webp}}
      {{#webp2x}}<source type="image/webp" srcset="{{@this}}" 2x>{{/webp2x}}
      <img class="u-photo" src="{{value}}" alt="{{alt}}" width="{{width}}" height="{{height}}" loading="lazy">
    </picture>
  {{/photos}}
</article>
