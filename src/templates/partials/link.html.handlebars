<article class="h-entry" light-emoji="{{lightEmoji}}" dark-emoji="{{darkEmoji}}">
  <a class="u-author" href="/" hidden></a>
  <header>
    <a href="/links/{{timestamp}}"><time datetime="{{datetime}}" class="dt-published">{{humanDateTime datetime timezone}}</time></a>
  </header>
  {{#if bookmarkOf}}
  <p class="e-content">
    {{content}}
  </p>
  <a class="u-bookmark-of p-name" href="{{bookmarkOf}}">{{name}}</a>
  {{else if repostOf}}
  <a class="u-repost-of p-name" href="{{repostOf}}">{{name}}</a>
  {{/if}}
</article>
