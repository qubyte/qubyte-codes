<article class="h-entry">
  {{> hcard-basics additionalClasses="p-author" }}
  <header>
    <a href="/links/{{timestamp}}"><time datetime="{{datetime}}" class="dt-published">{{humanDateTime datetime}}</time></a>
  </header>
  {{#if bookmarkOf}}
  <p class="e-content">{{content}}</p>
  <a class="u-bookmark-of p-name" href="{{bookmarkOf}}" target="_blank" rel="noopener">{{name}}</a>
  {{else if repostOf}}
  <a class="u-repost-of p-name" href="{{repostOf}}" target="_blank" rel="noopener">{{name}}</a>
  {{/if}}
</article>
