<article class="h-entry">
  <header>
    <a href="/links/{{timestamp}}"><time datetime="{{datetime}}" class="dt-published">{{humanDateTime datetime}}</time></a>
  </header>
  {{#if bookmarkOf}}
  <p>{{content}}</p>
  <a class="u-bookmark-of" href={{bookmarkOf}} target="_blank" rel="noopener">{{name}}</a>
  {{else if repostOf}}
  <a class="u-repost-of" href={{repostOf}} target="_blank" rel="noopener">{{name}}</a>
  {{/if}}
</article>
