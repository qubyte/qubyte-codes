<!doctype html>
<html lang="en">
<head>
  {{> head }}
</head>
<body>
  {{> hcard-basics }}
  <header>
    <h1><a href="/">Qubyte Codes</a></h1>
    {{> nav }}
  </header>
  <main>
    <article class="h-entry">
      <header>
        <h2><a href="{{{canonical}}}" class="u-url p-name">{{title}}</a></h2>
        <time datetime="{{datetime}}" class="dt-published">{{humanDate datetime}}</time>
        {{#updatedAt}}
        <time datetime="{{@this}}" class="dt-updated" hidden>{{humanDate @this}}</time>
        {{/updatedAt}}
        <span class="tags">{{#each tags}}<a class="p-category" href="/tags/{{this}}" rel="tag">#{{this}}</a> {{/each}}</span>
      </header>
      <div class="e-content">
        {{{content}}}
      </div>
      {{> webmentions }}
      <details class="share">
        <summary>Feel like sharing or responding?</summary>
        <p>{{> share-tweet callToAction="Tweet this post" }} or {{> share-toot callToAction="toot it!" }}</p>
        <p>Comments or corrections? {{> comments-tweet text="Send me a tweet" }} or {{> comments-toot text="toot to me!" }}</p>
        {{> webmention-form }}
      </details>
    </article>
  </main>
  <footer>
    {{> copyright }}
  </footer>
</body>
</html>
